package {		import flash.display.*;	import gs.TweenLite;	import fl.motion.easing.Linear;		import flash.events.*;	import at.ac.tuwien.igw.tuio.*;		public class Ring extends Sprite {				public function Ring(cont:DisplayObjectContainer, x:int, y:int, radius:int, color:uint){			this.blendMode = BlendMode.DARKEN;			this.graphics.lineStyle(1, color, 1, false, LineScaleMode.NONE);			this.graphics.beginFill(color, 0.5);			this.graphics.drawCircle(0,0,radius);			this.graphics.endFill();			this.x = x;			this.y = y;			cont.addChild(this);			//TweenLite.to(this, 1, {scaleX:2, scaleY:2, onComplete:this.fadeOut, ease:Linear.easeNone});		}				public function finish(){			this.parent.removeChild(this);		}				public function fadeOut(e:Event):void {			TweenLite.to(this, 0.3, {alpha:0,onComplete:this.finish});		}				public function moveMe(e:Event):void {			if(e is TouchEventMod){				this.x = (e as TouchEventMod).stageX;				this.y = (e as TouchEventMod).stageY;			} else if (e is TouchEvent) {				//trace(e);				this.x = (e as TouchEvent).stageX;				this.y = (e as TouchEvent).stageY;			} 		}			}}